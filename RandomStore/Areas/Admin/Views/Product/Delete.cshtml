@model Product
<form method="post" asp-action="delete" asp-controller="product">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Product
            </h2>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" disabled />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" type="text" class="form-control" disabled />
                <span asp-validation-for="ISBN" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="text" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Author"></label>
                <input asp-for="Author" type="text" class="form-control" disabled />
                <span asp-validation-for="Author" class="text-danger"></span>

            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <button asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:150px">Go back to List</button>
                </div>
            </div>


        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}